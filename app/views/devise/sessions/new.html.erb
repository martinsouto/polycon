<h2>Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <p><%= f.label :email, "Email:" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
  </div>

  <div class="field">
    <p><%= f.label :password, "Contraseña:" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %></p>
  </div>

<!--
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
-->

  <div class="actions">
    <p><%= f.submit "Ingresar" %></p>
  </div>
<% end %>

